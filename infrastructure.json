{
    "Parameters" : {
        "ProjectName" : {
            "Type" : "String",
            "Default" : "remote-dev-machine"
        }
    },
    "Resources" : {
        "DevelopmentInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": "ami-0c9f90931dd48d1f2",
                "InstanceType": "t2.micro",
                "KeyName": "development-machine",
                "IamInstanceProfile" : { "Ref" : "InstanceProfile" },
                "HibernationOptions": {
                    "Configured": true
                },
                "SecurityGroupIds": [
                    {
                        "Ref": "SecurityGroup"
                    }
                ],
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/xvda",
                        "Ebs": {
                            "DeleteOnTermination": true,
                            "Encrypted": true,
                            "VolumeSize": 64
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "instance" ] ] }
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash -ex\n",
                                "yum update -y\n",
                                "yes | amazon-linux-extras install docker\n",
                                "yum -y install git\n",
                                "git clone https://github.com/tuppsies/docker-dev.git /home/ec2-user/repos/docker-dev/\n",
                                "systemctl enable docker.service\n",
                                "systemctl start docker.service\n",
                                "usermod -aG docker ec2-user\n",
                                "docker build --no-cache --rm -t dev /home/ec2-user/repos/docker-dev/\n",
                                "cp /home/ec2-user/repos/docker-dev/shutdown-if-inactive.sh /home/shutdown-if-inactive.sh\n",
                                "chmod +x /home/shutdown-if-inactive.sh\n",
                                "(echo '*/15 * * * * sudo /home/shutdown-if-inactive.sh >> /tmp/shutdown-log.txt 2>&1')| crontab -"
                            ]
                        ]
                    }
                }
            }
        },
        "SecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId": "vpc-d6f18eb1",
                "GroupName": { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "security-group" ] ] },
                "GroupDescription" : "Locked down security group for the dev machine",
                "SecurityGroupEgress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": 0,
                        "ToPort": 0,
                        "IpProtocol": "-1"
                    }
                ],
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": 22,
                        "ToPort": 22,
                        "IpProtocol": "tcp"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "instance" ] ] }
                    }
                ]
            }
        },
        "ElasticIP": {
            "Type": "AWS::EC2::EIP",
            "Properties": {
                "InstanceId": {
                    "Ref": "DevelopmentInstance"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "elastic-ip" ] ] }
                    }
                ]
            }
        },
        "IAMAdminRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName" : { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "role" ] ] },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ec2.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Description": "Provide AWS admin permissions",
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/AdministratorAccess"
                ]
            }
        },
        "InstanceProfile" : {
            "Type" : "AWS::IAM::InstanceProfile",
            "Properties" : {
                "InstanceProfileName" : { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "instance-profile" ] ] },
                "Roles" : [ { "Ref" : "IAMAdminRole" } ]
            }
        }
    }
}
