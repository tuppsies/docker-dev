{
    "Parameters" : {
        "ProjectName" : {
            "Type" : "String",
            "Default" : "dev-machine"
        }
    },
    "Resources" : {
        "DevelopmentInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": "ami-0c9f90931dd48d1f2",
                "InstanceType": "t2.micro",
                "KeyName": "development-machine",
                "IamInstanceProfile" : { "Ref" : "InstanceProfile" },
                "HibernationOptions": {
                    "Configured": true
                },
                "SecurityGroupIds": [
                    {
                        "Ref": "SecurityGroup"
                    }
                ],
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/xvda",
                        "Ebs": {
                            "DeleteOnTermination": true,
                            "Encrypted": true,
                            "VolumeSize": 8
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "instance" ] ] }
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash -ex\n",
                                "yum update -y\n",
                                "yes | sudo amazon-linux-extras install docker\n",
                                "yum -y install git\n",
                                "git clone https://github.com/tuppsies/docker-dev.git /home/ec2-user/repos/docker-dev/\n",
                                "sudo systemctl enable docker.service\n",
                                "sudo systemctl start docker.service\n",
                                "usermod -aG docker ec2-user\n",
                                "docker build --no-cache --rm -t dev /home/ec2-user/repos/docker-dev/\n"
                            ]
                        ]
                    }
                }
            }
        },
        "SecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId": "vpc-d6f18eb1",
                "GroupName": { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "security-group" ] ] },
                "GroupDescription" : "Locked down security group for the dev machine",
                "SecurityGroupEgress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": 0,
                        "ToPort": 0,
                        "IpProtocol": "-1"
                    }
                ],
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": 22,
                        "ToPort": 22,
                        "IpProtocol": "tcp"
                    }
                ]
            }
        },
        "ElasticIP": {
            "Type": "AWS::EC2::EIP",
            "Properties": {
                "InstanceId": {
                    "Ref": "DevelopmentInstance"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "elastic-ip" ] ] }
                    }
                ]
            }
        },
        "IAMAdminRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName" : { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "role" ] ] },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ec2.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Description": "Provide AWS admin permissions",
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/AdministratorAccess"
                ]
            }
        },
        "InstanceProfile" : {
            "Type" : "AWS::IAM::InstanceProfile",
            "Properties" : {
                "InstanceProfileName" : { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "instance-profile" ] ] },
                "Roles" : [ { "Ref" : "IAMAdminRole" } ]
            }
        },
        "Alarm" : {
            "Type": "AWS::CloudWatch::Alarm",
            "Properties": {
                "AlarmName": { "Fn::Join" : [ "-", [ { "Ref" : "ProjectName" }, "alarm" ] ] },
                "AlarmDescription" : "Stop the instance if we notice that the network usage drops.",
                "ActionsEnabled": true,
                "OKActions": [],
                "AlarmActions": [
                    "arn:aws:swf:ap-southeast-2:238417454909:action/actions/AWS_EC2.InstanceId.Stop/1.0"
                ],
                "InsufficientDataActions": [],
                "MetricName": "NetworkIn",
                "Namespace": "AWS/EC2",
                "Statistic": "Average",
                "Dimensions": [
                    {
                        "Name": "InstanceId",
                        "Value": { "Ref" : "DevelopmentInstance" }
                    }
                ],
                "Period": 300,
                "EvaluationPeriods": 6,
                "DatapointsToAlarm": 6,
                "Threshold": 8000,
                "ComparisonOperator": "LessThanThreshold",
                "TreatMissingData": "missing"
            }
        }
    }
}